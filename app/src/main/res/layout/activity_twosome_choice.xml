<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="374dp"
                android:layout_height="96dp"

                app:srcCompat="@drawable/welcome" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Order Coffee"
                android:textSize="20dp" />


            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="367dp"
                android:layout_height="114dp"
                app:srcCompat="@drawable/twosomecaramel" />

            <Button
                android:id="@+id/btnTwoCaramel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Order" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="370dp"
                android:layout_height="121dp"
                app:srcCompat="@drawable/twosomedalgona" />

            <Button
                android:id="@+id/btnTwoDalgona"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Order" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="374dp"
                android:layout_height="132dp"
                app:srcCompat="@drawable/twosomeamericano" />

            <Button
                android:id="@+id/btnTwoAmericano"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Order" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="374dp"
                android:layout_height="130dp"
                app:srcCompat="@drawable/twosomecoldbrew" />

            <Button
                android:id="@+id/btnTwoColdbrew"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Order" />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="342dp"
                android:layout_height="128dp"
                app:srcCompat="@drawable/twosomecafemoca" />

            <Button
                android:id="@+id/btnTwoCafemoca"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Order" />

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="296dp"
                android:layout_height="145dp"
                app:srcCompat="@drawable/twosomesignature" />

            <Button
                android:id="@+id/btnTwoSignature"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Order" />

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="300dp"
                android:layout_height="137dp"
                app:srcCompat="@drawable/twosometonic" />

            <Button
                android:id="@+id/btnTwoTonic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Order" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>

