<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="96dp"

                app:srcCompat="@drawable/ediya" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Order Coffee"
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/eAmericano"
                android:layout_width="367dp"
                android:layout_height="114dp"
                app:srcCompat="@drawable/ediyaamericano" />


            <Button
                android:id="@+id/btnEdiyaAmericano"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Order" />

            <ImageView
                android:id="@+id/eCafeLatte"
                android:layout_width="370dp"
                android:layout_height="121dp"
                app:srcCompat="@drawable/ediyacafelatte" />

            <Button
                android:id="@+id/btnEdiyaCafelatte"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Order" />

            <ImageView
                android:id="@+id/eDalgona"
                android:layout_width="374dp"
                android:layout_height="132dp"
                app:srcCompat="@drawable/ediyadalgona" />

            <Button
                android:id="@+id/btnEdiyaDalgona"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Order" />


            <ImageView
                android:id="@+id/eVanilla"
                android:layout_width="379dp"
                android:layout_height="128dp"
                app:srcCompat="@drawable/ediyavannilla" />

            <Button
                android:id="@+id/btnEdiyaVanilla"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Order" />


            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="match_parent"
                android:layout_height="118dp"
                app:srcCompat="@drawable/ediyasignature" />

            <Button
                android:id="@+id/btnEdiyaSignature"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Order" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
